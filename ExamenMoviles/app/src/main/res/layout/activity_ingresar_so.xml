<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".IngresarSo">

    <TextView
            android:text="@string/pHNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:textColor="@color/blanco"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintVertical_bias="0.12" android:textStyle="bold"/>
    <TextView
            android:text="@string/pHVersionApi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textColor="@color/blanco"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.217"
            app:layout_constraintVertical_bias="0.231" android:textStyle="bold"/>
    <TextView
            android:text="@string/pHFecha"
            android:layout_width="155dp"
            android:layout_height="68dp"
            android:id="@+id/textView10" android:textColor="@color/blanco"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintVertical_bias="0.35" android:textStyle="bold"/>
    <TextView
            android:text="@string/pHpesoGigas"
            android:layout_width="109dp"
            android:layout_height="56dp"
            android:id="@+id/textView11" android:textColor="@color/blanco"
            android:textSize="24sp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.225"
            app:layout_constraintVertical_bias="0.499" android:textStyle="bold"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.667" android:textSize="24sp" android:textColor="@color/blanco"
            android:text="@string/lbInstalado"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="133dp"
            android:layout_height="53dp"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.673"
            app:layout_constraintVertical_bias="0.476" app:layout_constraintBottom_toBottomOf="@+id/textView2"
    >

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pHNombre" android:id="@+id/tNombre" android:textColor="@color/blanco"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="130dp"
            android:layout_height="55dp"
            app:layout_constraintTop_toTopOf="@+id/textView9" app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintStart_toEndOf="@+id/textView9" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pHVersionApi" android:id="@+id/tVersion" android:textColor="@color/blanco"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="59dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView10" app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pHFecha" android:id="@+id/tFecha" android:textColor="@color/blanco"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="151dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView11" app:layout_constraintTop_toTopOf="@+id/textView11"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pHpesoGigas" android:id="@+id/tGB" android:textColor="@color/blanco"/>
    </android.support.design.widget.TextInputLayout>
    <Button
            android:text="@string/btnRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bRegistrar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintVertical_bias="0.827"/>
    <Button
            android:text="@string/regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bCancelar"
            app:layout_constraintTop_toTopOf="@+id/bRegistrar"
            app:layout_constraintBottom_toBottomOf="@+id/bRegistrar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="56dp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/bRegistrar" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.438"/>
</android.support.constraint.ConstraintLayout>